nav.sidebar
  style.
    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100%;
      width: 250px;
      background-color: #2c3e50;
      overflow-y: auto;
      padding-top: 20px;
    }
    .sidebar a {
      color: white;
      display: block;
      padding: 15px;
      text-decoration: none;
      font-weight: 500;
      transition: 0.3s;
    }
    .sidebar a:hover {
      background-color: #34495e;
    }
    .sidebar .active {
      background-color: #2980b9;
    }
    .sidebar i {
      margin-right: 10px;
    }

  h3.text-white.mt-3.mb-4.text-center.font-weight-bold IOT

  // Các liên kết của sidebar
  a(href="/dashboard" class=activeTab === 'home' ? 'active' : '')
    i.fas.fa-tachometer-alt
    | Tổng quan

  a(href="/sensor-log" class=activeTab === 'sensor-log' ? 'active' : '')
    i.fas.fa-box
    | Sensor-log
