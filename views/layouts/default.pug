
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title #{pageTitle}
    link(href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap", rel="stylesheet")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css", rel="stylesheet")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css", rel="stylesheet")
    style.
      body {
        font-family: 'Roboto', sans-serif;
        margin: 0;
        padding: 0;
        height: 100vh; /* Chiều cao của body bằng toàn bộ màn hình */
        overflow: hidden; /* Ẩn cuộn dọc nếu không cần thiết */
      }

      .content {
        margin-left: 220px; /* Khoảng cách cho sidebar */
        padding: 20px; /* Giảm padding để tránh tràn */
        height: calc(100vh - 40px); /* Trừ padding trên và dưới */
        background-color: #f4f6f9;
        overflow-y: auto; /* Bật cuộn chỉ trong nội dung nếu cần */
      }

      .main-content {
        padding-top: 20px;
        box-sizing: border-box; /* Đảm bảo padding không làm tăng kích thước phần tử */
      }

  body
    .container
      .row.col-4
        // Sidebar - bên trái
        include ../partials/sider
        // Nội dung chính - bên phải
      .row.col-11
        main.content
          .main-content
            block main

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js")
